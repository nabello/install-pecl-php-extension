{% endif %}
{% if (pecl_configurations.xdebug_remote_host is defined) %}
xdebug.remote_host={{ pecl_configurations.xdebug_remote_host }}
{% endif %}
{% if (pecl_configurations.xdebug_remote_port is defined) %}
xdebug.remote_port={{ pecl_configurations.xdebug_remote_port }}
{% endif %}
{% if (pecl_configurations.xdebug_remote_handler is defined) %}
xdebug.remote_handler={{ pecl_configurations.xdebug_remote_handler }}
{% endif %}
{% if (pecl_configurations.xdebug_remote_log is defined) %}
xdebug.remote_log={{ pecl_configurations.xdebug_remote_log }}
{% endif %}
{% if (pecl_configurations.xdebug_remote_autostart is defined) %}
xdebug.remote_autostart={{ pecl_configurations.xdebug_remote_autostart }}
{% endif %}
{% if (pecl_configurations.xdebug_idekey is defined) %}
xdebug.idekey="{{ pecl_configurations.xdebug_idekey }}"
{% endif %}
{% if (pecl_configurations.xdebug_max_nesting_level is defined) %}
