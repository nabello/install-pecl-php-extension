{% endif %}
{% if (pecl_configurations.xdebug_coverage_enable is defined) %}
xdebug.coverage_enable={{ pecl_configurations.xdebug_coverage_enable }}
{% endif %}
{% if (pecl_configurations.xdebug_default_enable is defined) %}
xdebug.default_enable={{ pecl_configurations.xdebug_default_enable }}
{% endif %}
{% if (pecl_configurations.xdebug_remote_enable is defined) %}
xdebug.remote_enable={{ pecl_configurations.xdebug_remote_enable }}
{% endif %}
{% if (pecl_configurations.xdebug_remote_connect_back is defined) %}
